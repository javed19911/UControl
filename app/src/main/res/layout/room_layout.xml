<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@drawable/ucb2"  />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff9c00"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:padding="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/logo"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/logo"
            android:id="@+id/company"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#fff"
            android:text="UEnics" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/logo"
            android:layout_below="@+id/company"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="#fff"
            android:text="Bringing Electronics to Life" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bg1"
        android:id="@+id/header1"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/pointer11"
            android:src="@drawable/pointer"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:textAllCaps="true"
            android:text="SWITCH_NAME_0"
            android:layout_toRightOf="@+id/pointer11"
            android:layout_centerVertical="true"/>



        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:text="8"
            android:textColor="#fff"
            android:textSize="36dp"
            android:textStyle="bold"
            android:id="@+id/speed"
            android:paddingBottom="7dp"
            android:paddingLeft="16dp"
            android:background="@drawable/indicator"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:id="@+id/parent_name"
        android:background="#1b241e"
        android:padding="5dp">
        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/design1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/parent"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:text="HOME NAME"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/parent"
            android:src="@drawable/design1"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/parent_name">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/try1"
            android:background="@drawable/list_bg1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/pointer"
                android:src="@drawable/pointer"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:textAllCaps="true"
                android:text="ROOM_NAME_0"
                android:layout_toRightOf="@+id/pointer"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/try11"
            android:layout_marginTop="10px"
            android:layout_below="@+id/try1"
            android:background="@drawable/list_bg1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/pointer1"
                android:src="@drawable/pointer"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:textAllCaps="true"
                android:text="SWITCH_NAME_0"
                android:layout_toRightOf="@+id/pointer1"
                android:layout_centerVertical="true"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="-25dp"
                android:layout_toLeftOf="@+id/seekBar"
                android:background="@drawable/button_selector"
                />
            <SeekBar
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:max="9"
                android:soundEffectsEnabled="true"
                android:layout_marginRight="-25dp"
                android:layout_toLeftOf="@+id/next"
                android:rotation="-90"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:id="@+id/next"
                android:text="8"
                android:textColor="#fff"
                android:textSize="36dp"
                android:textStyle="bold"
                android:paddingBottom="7dp"
                android:paddingLeft="16dp"
                android:background="@drawable/indicator"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/ft"
        android:background="@drawable/list_bg1">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/re"
            android:src="@mipmap/regulator"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b241e"
        android:id="@+id/ft"
        android:padding="6dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/logo1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/design1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/logo1"
            android:textSize="15dp"
            android:textColor="#fff"
            android:text="SMART HOME"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/logo1"
            android:src="@drawable/design1"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



    </RelativeLayout>
