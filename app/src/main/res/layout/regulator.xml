<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/regulat"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:background="#0aa">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:background="#eeeeee"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:id="@+id/switch3"
            android:background="@drawable/switchon1"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/switch3"
            android:layout_toLeftOf="@+id/reset">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="switch name"
                android:textColor="#000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:id="@+id/sw"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

        <Button
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="ok"
            android:background="#093"
            android:id="@+id/reset"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Please wait"
        android:layout_marginBottom="-5dp"
        android:textColor="#000"
        android:textSize="17dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="@drawable/list_bg">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="9"
                android:textColor="#093"
                android:textSize="80dp"
                android:textStyle="bold"
                android:id="@+id/status"/>
        </RelativeLayout>
    <ImageView
        android:layout_width="5dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/design1"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/regulator"
        android:id="@+id/reg"
        android:layout_marginRight="20dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b241e"
        android:id="@+id/footer"
        android:padding="6dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/logo1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/design1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/logo1"
            android:textSize="15dp"
            android:textColor="#fff"
            android:text="REGULATOR"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/logo1"
            android:src="@drawable/design1"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



</LinearLayout>