<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="vmMain"
            type="com.smarthome.uenics.ucontrol.ui.imageDataCollection.VMImageDataCollection" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="demo.com.intello.tech.intellogenericdemo.ui.imageDataCollection.fragmentDataCollection.CameraFragment">

        <androidx.camera.view.PreviewView
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/preview_mask_focus"
            app:layout_constraintTop_toTopOf="@+id/camera"
            app:layout_constraintBottom_toBottomOf="@+id/camera"
            app:layout_constraintRight_toRightOf="@+id/camera"
            app:layout_constraintLeft_toLeftOf="@+id/camera"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_crop_free_24"/>

        <ImageView
            android:id="@+id/preview_mask"
            app:layout_constraintTop_toTopOf="@+id/camera"
            app:layout_constraintBottom_toBottomOf="@+id/camera"
            app:layout_constraintRight_toRightOf="@+id/camera"
            app:layout_constraintLeft_toLeftOf="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"/>

        <!-- <fragment android:name="com.google.ar.sceneform.ux.ArFragment"
             android:id="@+id/ux_fragment"
             android:layout_width="300dp"
             android:layout_height="500dp"
             app:layout_constraintTop_toTopOf="@+id/camera"
             app:layout_constraintBottom_toBottomOf="@+id/camera"
             app:layout_constraintRight_toRightOf="@+id/camera"
             app:layout_constraintLeft_toLeftOf="@+id/camera"/>
 -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:id="@+id/focal_lengths"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@+id/camera"
            app:layout_constraintLeft_toLeftOf="@+id/camera"
            tools:text="focal lengths"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#44444444"
            app:layout_constraintStart_toStartOf="parent">



            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="15dp"
                android:id="@+id/done"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@drawable/ic_ellipse_1"
                android:src="@drawable/ic_baseline_check_24"
                android:text="@string/hello_blank_fragment"
                android:onClick="@{()->vmMain.onCaptureImageBtnClicked(context)}"
                android:contentDescription="TODO" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="15dp"
                android:layout_gravity="end"
                android:id="@+id/reset"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:background="@drawable/ic_ellipse_1"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:text="@string/hello_blank_fragment"
                android:contentDescription="TODO" />

        </FrameLayout>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:id="@+id/back"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_ellipse_1"
            android:textColor="@color/white"
            android:text="Back"
            android:onClick="@{()->vmMain.onBackBtnClicked(context)}"
            android:contentDescription="TODO" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:id="@+id/capture"
            android:background="@drawable/ic_ellipse_1"
            android:src="@android:drawable/ic_menu_camera"
            android:text="@string/hello_blank_fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="TODO" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
